<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.rishirajpurohit.in.databasedemoandroid.TaskDetailActivity">

    <TextView
        android:id="@+id/tv_title_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_subtitle_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_title_detail"
        android:layout_centerVertical="true"
        android:text="TextView" />

    <Button
        android:id="@+id/btn_goToUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_subtitle_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:text="Go to Update" />
</RelativeLayout>
